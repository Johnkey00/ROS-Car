<?xml version="1.0"?>
<robot name="differential_drive_robot">
<xacro:property name="width" value=".2" />

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="3 2 1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="3 2 1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <link name="left_wheel">
    <visual>
      <origin xyz="0 1 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.5"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 1 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 1 0.5" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>

  <link name="right_wheel">
    <visual>
      <origin xyz="0 -1 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.5"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -1 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 -1 0.5" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>

  <link name="world"/>

  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 1 0.5" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -1 0.5" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
</robot>
